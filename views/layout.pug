doctype html
html
    head
        //-var title = obj.title;
        //-var cookie = document.cookie;
        block vars
        title #{title}
        link(href='style.css', rel='stylesheet')
        link(href="https://fonts.googleapis.com/css?family=Fira+Mono|Nova+Mono" rel="stylesheet")
    body(onLoad="init()")
        header
            nav
                ul
                    each item in config.menu
                        li
                            a(href=item[1]) #{item[0]}
                   
        div(id='content', class='item')
            hr
            block content
        footer
            h5 Last Visited: #{lastVisited}
            p(id="footer") &copy;DataExpress 2017
        