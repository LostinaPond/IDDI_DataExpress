extends layout
block content
    h1 Administrator View

    h3 Open Accounts:
    
    table
        tr
            th Id
            th Username
            th Password
            th User Level
            th Email
            th Age
            th Answer 1
            th Answer 2
            th Answer 3
            th
            th
        each item in accounts
            tr
                td 
                    a(href='/details/' + item.id) #{item.id}
                td #{item.username}
                td #{item.password}
                td #{item.userLevel}
                td #{item.email}
                td #{item.age}
                td #{item.answer1}
                td #{item.answer2}
                td #{item.answer3}
                td
                    a(href='/edit/' + item.id) Edit
                td
                    a(href='/delete/' + item.id) Delete

    br
    h3 Create new Account:
        a(href='/make') Add Account
